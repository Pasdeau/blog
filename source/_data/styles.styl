/* 过滤条 */
.gallery-filter
  margin: 8px 0 16px
  display: flex
  flex-wrap: wrap
  gap: 8px

.gallery-filter button
  padding: 6px 12px
  border-radius: 999px
  border: 1px solid var(--body-text-color, #333)
  background: transparent
  cursor: pointer
  font-size: .9rem
  opacity: .7
  transition: .2s
  &:hover, &.active
    opacity: 1
    background: rgba(0,0,0,.06)

/* 瀑布流栅格：自适应多列 */
.gallery-grid
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr))
  gap: 12px

/* 卡片 */
.gallery-grid a
  position: relative
  display: block
  border-radius: 12px
  overflow: hidden
  box-shadow: 0 2px 10px rgba(0,0,0,.06)
  transform: translateZ(0)
  transition: transform .2s, box-shadow .2s
  &:hover
    transform: translateY(-2px)
    box-shadow: 0 8px 24px rgba(0,0,0,.12)

.gallery-grid img
  width: 100%
  height: 220px       /* 统一高度便于整齐；想自由比例可删掉这行 */
  object-fit: cover
  display: block

/* 悬浮标题遮罩 */
.gallery-grid .caption
  position: absolute
  left: 0
  right: 0
  bottom: 0
  padding: 6px 10px
  font-size: 12px
  color: #fff
  background: linear-gradient(transparent, rgba(0,0,0,.55))
  opacity: 0
  transition: .2s

.gallery-grid a:hover .caption
  opacity: 1
