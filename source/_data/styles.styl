/* 过滤条 */
.gallery-filter
  margin: 8px 0 16px
  display: flex
  flex-wrap: wrap
  gap: 8px

.gallery-filter button
  padding: 6px 12px
  border-radius: 999px
  border: 1px solid var(--body-text-color, #333)
  background: transparent
  cursor: pointer
  font-size: .9rem
  opacity: .7
  transition: .2s
  &:hover, &.active
    opacity: 1
    background: rgba(0,0,0,.06)

/* 瀑布流栅格：自适应多列 */
.gallery-grid
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr))
  gap: 12px

/* 卡片 */
.gallery-grid a
  position: relative
  display: block
  border-radius: 12px
  overflow: hidden
  box-shadow: 0 2px 10px rgba(0,0,0,.06)
  transform: translateZ(0)
  transition: transform .2s, box-shadow .2s
  &:hover
    transform: translateY(-2px)
    box-shadow: 0 8px 24px rgba(0,0,0,.12)

.gallery-grid img
  width: 100%
  height: 220px       /* 统一高度便于整齐；想自由比例可删掉这行 */
  object-fit: cover
  display: block

/* 悬浮标题遮罩 */
.gallery-grid .caption
  position: absolute
  left: 0
  right: 0
  bottom: 0
  padding: 6px 10px
  font-size: 12px
  color: #fff
  background: linear-gradient(transparent, rgba(0,0,0,.55))
  opacity: 0
  transition: .2s

.gallery-grid a:hover .caption
  opacity: 1

/* 居中大头像 + 名字 + 社交图标 */
.home-hero
  text-align: center
  margin: 10vh auto 8vh
  max-width: 820px
  padding: 0 16px
  margin: 0 auto 0.4cm
  margin-bottom: 1.5cm

.home-avatar
  width: 160px
  height: 160px
  border-radius: 50%
  object-fit: cover
  display: inline-block
  box-shadow: 0 6px 24px rgba(0,0,0,.12)

.home-name
  margin: 18px 0 8px
  font-size: 2rem
  font-weight: 800
  letter-spacing: .3px
  margin: 0 0 1.2cm

.home-tagline
  margin: 0 auto 14px
  font-size: 1rem
  opacity: .8
  margin: 0 auto 0.4cm

.home-tagline:last-of-type
  margin-bottom: 1.5cm

.home-social
  display: inline-flex
  gap: 14px
  margin: 10px 0 18px
  margin-top: 0

.home-social a
  width: 38px
  height: 38px
  border-radius: 50%
  display: inline-flex
  align-items: center
  justify-content: center
  border: 1px solid rgba(0,0,0,.15)
  transition: .2s
  text-decoration: none
  color: inherit
  &:hover
    transform: translateY(-2px)
    box-shadow: 0 6px 18px rgba(0,0,0,.12)

.home-social i
  font-size: 18px

.home-actions
  display: flex
  gap: 10px
  justify-content: center
  margin-top: 6px

.btn-primary, .btn-ghost
  display: inline-block
  padding: 8px 14px
  border-radius: 999px
  text-decoration: none
  font-size: .95rem
  transition: .2s
  border: 1px solid rgba(0,0,0,.18)

.btn-primary
  background: #111
  color: #fff
  &:hover
    opacity: .9

.btn-ghost
  background: transparent
  color: inherit
  &:hover
    background: rgba(0,0,0,.06)

/* 移动端微调 */
@media (max-width: 600px)
  .home-name
    font-size: 1.6rem
  .home-avatar
    width: 132px
    height: 132px

/* Footer：两行居中。第1行=第一个块（版权），其余在第2行水平居中排布 */
.footer .footer-inner
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-items: center
  gap: 6px 16px
  text-align: center
  font-size: .92em

/* 所有直接子块只占自身宽度，不再占满整行 */
.footer .footer-inner > *
  flex: 0 0 auto
  display: inline-flex
  align-items: center
  gap: .5em
  margin: 0
  float: none !important   /* 关键：撤销主题里的浮动 */

 /* 第一个子块（版权/作者）独占一整行并居中 */
.footer .footer-inner > :first-child
  flex-basis: 100%
  justify-content: center

/* 这些统计模块统一成内联 flex，避免被当成块级撑满一行 */
.footer .symbols-count-time,
.footer .busuanzi-count,
.footer .cc-license,
.footer .powered,
.footer .footer-custom
  display: inline-flex !important
  align-items: center
  gap: .6em
  float: none !important

/* 计数字段间距更友好 */
.footer .busuanzi-count > span,
.footer .symbols-count-time > span,
.footer .symbols-count-time .post-meta-item
  margin: 0 .5em

/* 移动端微调 */
@media (max-width: 480px)
  .footer .footer-inner
    column-gap: 12px
    font-size: .9em

/* 仅显示 footer 的第一个块（版权），其余全部隐藏 */
.footer .footer-inner > *:not(:first-child)
  display: none !important

/* 让版权这一块单独占一行并居中 */
.footer .footer-inner > :first-child
  flex-basis: 100%
  justify-content: center

@media (max-width: 600px)
  .home-name
    margin-bottom: 2.0rem
  .home-hero .home-tagline:last-of-type
    margin-bottom: 2.5rem
